{
    "name": "evgwed/football-test-task",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Evgeniy Prokhorov",
            "email": "evgwed@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "run-index": [
            "php index.php"
        ],
        "test": [
            "./vendor/bin/phpunit --testdox tests --colors=always"
        ]
    },
    "scripts-descriptions": {
        "run-index": "Run index.php script!",
        "test": "Run all tests!"
    }
}
